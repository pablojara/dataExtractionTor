import json
import networkx as nx
import matplotlib.pyplot as plt

if __name__=='__main__':

	G=nx.DiGraph()
	G = nx.read_gexf("./graphFormat.dat")

	numbers = []
	rangeOfNumbers = []
	x = []

	for n in G.nodes_iter():
		numbers.append(G.in_degree(n))
		if(G.in_degree(n) not in rangeOfNumbers):
			rangeOfNumbers.append(G.in_degree(n))
	
	rangeOfNumbers.sort()

	for n in rangeOfNumbers:
		x.append(numbers.count(n))

	plt.scatter(rangeOfNumbers,x, label = ' in-degree', color ='k')

	plt.xlim(0,30)
	plt.ylim(0,10000)

	plt.yticks([0,1000,10000,50000])
	plt.xticks([0,10,20,30])

	plt.xlabel('in-links')
	plt.ylabel('numberOfNodes')

	plt.title('in-degree distribution')
	plt.legend()

	plt.show()
